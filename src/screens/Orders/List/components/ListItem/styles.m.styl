@import '../../../../../common.styl'

.row
  display: grid;
  grid-template-columns: minmax(150px, 1.33fr) minmax(150px, 1.33fr) minmax(150px, 1.33fr) minmax(150px, 1.33fr) minmax(150px, 1.33fr);
  min-height 64px

  div
    display flex
    align-items center

    div
      width 80%

    &:last-child div
      width 100%

.orderNumber
  font-weight 500
  color $primary-dark

.dilivery
  width: 125px

.row div:nth-child(1)
  justify-self center

.row div:nth-child(2)
  justify-self center

.row div:nth-child(3)
  justify-self center